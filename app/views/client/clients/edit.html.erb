<div class="container">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="border col-4 my-5">
            <h2 class="text-center mt-3">マイページ編集</h2>
            <div class="row">
                <div class="col-md my-4">
                  <%= form_with model: @client, url:client_client_path(@client.id), local:true do |f| %>
                          <form>
                              <div class="form-group">
                                  <label>名前（クライアント名）:</label><br/>
                                  <%= f.text_field :name %>
                              </div>
                              <div class="form-group">
                                  <label>プロフィール写真:</label><br/>
                                  <%= f.attachment_field :image %>
                              </div>
                              <div class="form-group">
                                  <label>自己紹介:</label><br/>
                                  <%= f.text_area :body, class: "form-control" %>
                              </div>
                               <div class="form-group">
                                  <label>連絡先:</label><br/>
                                  <%= f.text_field :contact %>
                              </div>
                              <div class="text-center">
                                  <%= f.submit "保存", class: "btn btn-secondary" %>
                              </div>
                          </form>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>