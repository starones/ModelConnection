<h1 class="py-3 bg-dark text-white text-center"><strong>MODEL</strong></h1>

  <div class="container pb-5">
    <div class="row text-center mt-5 bg-white">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>名前</th>
              <th class="ml-2">登録日</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @actors.each do |actor| %>
              <tr>
                <td><%= actor.id %></td>
                <td><%= actor.name %></td>
                <td><%= actor.created_at.strftime("%Y/%m/%d") %></td>
                <td class="text-right"><%= link_to "詳細", admin_actor_path(actor), class: "btn btn-secondary" %></td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

