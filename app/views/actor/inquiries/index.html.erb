<!-------エラーメッセージ------->
  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
        <ul>
          <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <!----------ここまで--------->


<div class="container border my-5">
	<div class="row">
		<div class="col-md-3  pt-5 bg-secondary">
				<h2>Contact Us</h2>
				<h4>We would love to hear from you !</h4>
		</div>
		  <%= form_with model: @inquiry, url:inquiry_confirm_path, local:true do |f| %>
    		<div class="col-md-9 pt-3 pl-4">
    		  <div class="form-group">
    				<label class="control-label" for="fname">お名前:<span class="text-danger">（必須）</span></label>
    				<div class="col-sm-10">
    				  <%= f.text_field :name, size: "50" %>
    			  </div>
    			</div>
    			<div class="form-group">
    				<label class="control-label" for="email">メールアドレス:<span class="text-danger">（必須）</span></label>
    				<div class="col-sm-10">
    				  <%= f.text_field :email, size: "50" %>
    				</div>
    			</div>
    			<div class="form-group">
    				<label class="control-label" for="comment">コメント:<span class="text-danger">（必須）</span></label>
    				<div class="col-sm-10">
    					 <%= f.text_area :message, size: "50x6" %>
    				</div>
    			</div>
    			<div class="form-group">
    				<div class="col-sm-offset-2 col-sm-10 text-center mt-4">
    			    <%= f.submit "確認", class: "btn btn-secondary px-4" %>
    			  </div>
    			</div>
    		</div>
      <% end %>
	</div>
</div>

