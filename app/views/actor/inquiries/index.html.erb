<!-------エラーメッセージ------->
  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
        <ul>
          <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <!----------ここまで--------->

<div class="container py-5">
	<div class="r_inquiry1 row border bg-white">
		<div class="r_inquiry2 col-md-3 pt-5 text-center contact-us text-white">
		  <h1>Contact Us</h1>
		</div>
  		<div class="col-md-9 pt-5 mb-2 pl-4">
        <%= form_with model: @inquiry, url:inquiry_confirm_path, local:true do |f| %>
    		  <div class="form-group">
    				<label class="control-label" for="fname">お名前:<span class="text-danger">（必須）</span></label>
    				<div class="col-sm-10">
    				  <%= f.text_field :name, class:"w-75"%>
    			  </div>
    			</div>
    			<div class="form-group">
    				<label class="control-label" for="email">メールアドレス:<span class="text-danger">（必須）</span></label>
    				<div class="col-sm-10">
    				  <%= f.text_field :email, class: "w-75" %>
    				</div>
    			</div>
    			<div class="form-group">
    				<label class="control-label" for="comment">コメント:<span class="text-danger">（必須）</span></label>
    				<div class="col-sm-10">
    					 <%= f.text_area :message, class:"w-100 pb-5" %>
    				</div>
    			</div>
    			<div class="form-group">
    				<div class="col-sm-offset-2 col-sm-10 text-center mt-5">
    			    <%= f.submit "確認", class: "btn btn-secondary btn-lg" %>
    			  </div>
    			</div>
        <% end %>
      </div>
	</div>
</div>
