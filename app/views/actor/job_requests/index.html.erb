<h1>お仕事一覧画面モデル側</h1>
<div class="container my-4">
  <div class="row">
     <% @job_requests.each do |job_request| %>
    <div class="col-lg-6 col-md-6">
      <div class="card mb-3">
        <%= link_to client_job_request_path(job_request) do %>
              <%= attachment_image_tag job_request.client, :image, size: "210x210", class:"card-img-top", fallback: "no-image.jpeg" %>
          <div class="card-body">
            <h5 class="card-title text-dark"><%= job_request.title %></h5>
              <p class="card-text text-dark"><%= job_request.job_content %></p>
                <p class="card-text"><small class="text-muted">登録日：<%= job_request.created_at.strftime("%Y/%m/%d") %></small></p>
            <% end %>
          </div>
      </div>
    </div>
     <% end %>
  </div>
</div>