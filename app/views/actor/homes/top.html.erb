<div class="text-center alert-info"><%= notice %></div>
<div class="box">
    <div id="theTarget">
      <div class="top_image1"></div>
      <div class="top_image2"></div>
      <div class="top_image3"></div>
      <div class="top_image4"></div>
      <div class="top_image5"></div>
      </div>
    </div>
</div>
<div class="container">
  <div class="row">
    <div class="col mt-4 mb-3">
      <h2>Recommend Model</h2>
    </div>
  </div>
  <div class="row">
      <% @ranks.each do |actor| %>
        <div class="col-lg-3 col-md-6">
          <div class="card mx-auto mb-4 bg-dark text-white">
            <%= link_to actor_path(actor) do %>
              <%= attachment_image_tag actor, :image, size: "210x300", class:"card-img-top", fallback: asset_path("no-image.jpeg") %>
              <!-------------javascript(jquery)の機能-------------->
              <div class="caption2 text-center">
                <h3 class="mb-5"><strong><%= actor.name %></strong></h3>
                <h5>Bron：<%= actor.born_year %>/<%= actor.born_month %>/<%= actor.born_day %></h5>
                <h5 class="my-3">Age：<%= actor.age %></h5>
                <h5>Gender：
                    <% if actor.gender == true %>
                        <th>Woman</th>
                    <% else %>
                        <th>Men</th>
                    <% end %>
                </h5>
              </div>
              <!-------------------ここまで---------------->
            <% end %>
              <p class="card-text text-center"><%= actor.name %></p>
          </div>
        </div>
      <% end %>
  </div>
  <div class="row">
    <div class="col mt-4 mb-3">
      <h2>New Model</h2>
    </div>
  </div>
  <div class="row">
      <% @actors.each do |actor| %>
        <div class="col-lg-3 col-md-6">
          <div class="card mx-auto mb-4 bg-dark text-white">
            <%= link_to actor_path(actor) do %>
              <%= attachment_image_tag actor, :image, size: "210x300", class:"card-img-top", fallback: asset_path("no-image.jpeg")%>
              <div class="caption2 text-center">
                <h3 class="mb-5"><strong><%= actor.name %></strong></h3>
                <h5>Bron：<%= actor.born_year %>/<%= actor.born_month %>/<%= actor.born_day %></h5>
                <h5 class="my-3">Age：<%= actor.age %></h5>
                <h5>Gender：
                    <% if actor.gender == true %>
                        <th>Woman</th>
                    <% else %>
                        <th>Men</th>
                    <% end %>
                </h5>
              </div>
            <% end %>
              <p class="card-text text-center"><%= actor.name %></p>
          </div>
        </div>
      <% end %>
  </div>
  <div class="text-right pb-4">
    <%= link_to "モデル一覧へ>>", actors_path %>
  </div>
</div>

<!---------javascript機能-------------->
<script>
$(function () {
    $('.card').hover(function () {
        $('.caption2', this).animate({
            top: "0%"
        }, 500);
    }, function () {
        $('.caption2', this).animate({
            top: "100%"
        }, 700);
    });
});
</script>
