<div class="box">
    <div id="theTarget">
      <div class="top_image1"></div>
      <div class="top_image2"></div>
      <div class="top_image3"></div>
      <div class="top_image4"></div>
      <div class="top_image5"></div>
      </div>
    </div>
</div>
<div class="container">
  <div class="row">
    <div class="col mt-4 mb-3">
      <h2>Recommend Model</h2>
    </div>
  </div>
  <div class="row">
      <% @ranks.each do |actor| %>
        <div class="col-lg-3 col-md-6">
          <div class="card mx-auto mb-4 bg-dark text-white">
            <%= link_to actor_path(actor) do %>
              <%= attachment_image_tag actor, :image, size: "210x300", class:"card-img-top", fallback: "no-image.jpeg" %>
            <% end %>
              <p class="card-text text-center"><%= actor.name %></p>
          </div>
        </div>
      <% end %>
  </div>
  <div class="row">
    <div class="col mt-4 mb-3">
      <h2>New Model</h2>
    </div>
  </div>
  <div class="row">
      <% @actors.each do |actor| %>
        <div class="col-lg-3 col-md-6">
          <div class="card mx-auto mb-4 bg-dark text-white">
            <%= link_to actor_path(actor) do %>
              <%= attachment_image_tag actor, :image, size: "210x300", class:"card-img-top", fallback: "no-image.jpeg" %>
            <% end %>
              <p class="card-text text-center"><%= actor.name %></p>
          </div>
        </div>
      <% end %>
  </div>
  <div class="text-right mb-4">
    <%= link_to "モデル一覧へ>>", actors_path %>
  </div>
</div>