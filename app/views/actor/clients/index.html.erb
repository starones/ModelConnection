<h1 class="py-2 bg-dark text-white text-center"><strong>CLIENT LIST</strong></h1>
  <div class="container pt-5 pb-3">
    <div class="row">
      <% @clients.each do |client| %>
        <div class="col-lg-3 col-md-6">
          <div class="card mx-auto mb-4 bg-dark text-white">
            <%= link_to client_client_path(client) do %>
              <%= attachment_image_tag client, :image, size: "210x210", class:"card-img-top", fallback: "no-image.jpeg" %>
            <% end %>
              <p class="card-text text-center"><%= client.name %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center pb-5">
    <%= paginate @clients %>
  </div>