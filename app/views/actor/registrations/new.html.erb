<div class="container mt-5 mb-5">
  <div class="row text-center">
	  <div class="col-md-6 offset-md-3">
	    <div class="card">
	      <div class="card-body">
	          <div class="login-title mb-3 mt-3">
	            <h2>モデル新規登録</h2>
	          </div>
	            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	            <%= devise_error_messages %>
	          <div class="login-form mt-4">
	            <form>
                <div class="form-row">
                  <div class="form-group col-md-12">
                     <%= f.label "名前（モデル名）" %><br/>
                     <%= f.text_field :name, autofocus: true %>
                  </div>
                   <div class="form-group col-md-12">
                      <%= f.label "性別" %><br/>
                      <%= f.radio_button :gender, true %>
                      <%= f.label :gender, "女性" %>：
                      <%= f.radio_button :gender, false %>
                      <%= f.label :gender, "男性" %>
                  </div>
                  </div>
                  <div class="form-group col-md-12">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                  </div>
                  <div class="form-group col-md-12">
                    <%= f.label "パスワード" %>
                    <% if @minimum_password_length %>
                    <em>（<%= @minimum_password_length %>文字以上）</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password" %>
                  </div>
                  <div class="form-group col-md-12">
                    <%= f.label "パスワード再入力" %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                  </div>
                  <div class="form-group col-md-12 mt-3">
                    <%= f.submit "新規登録", class: "btn btn-secondary btn-lg" %>
                  </div>
                </div>
              <% end %>
              </form>
	          </div>
	           <div class="logi-forgot text-right mt-2">
	             すでに登録済みの方は<%= render "actor/shared/links" %>
	           </div>
	       </div>
	     </div>
	  </div>
  </div>
</div>